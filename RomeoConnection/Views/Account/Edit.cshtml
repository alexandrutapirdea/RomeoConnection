@model RomeoConnection.Models.ApplicationUser
@{
    ViewBag.Title = "Edit your profile";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Edit", "Account", FormMethod.Post, 
                                    new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Edit your profile :</h4>
    <hr />
    <h3 style="font-weight: bold; color:#000000">Required details:</h3>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    // First Name
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, "First Name", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", Value = Model.FirstName })
        </div>
    </div>
    // Last Name
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, "Last Name", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", Value = @Model.LastName })
        </div>
    </div>

    <h3 style="font-weight: bold; color:#000000">Optional details:</h3>
    // Location
    <div class="form-group">
        @Html.LabelFor(m => m.Location, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Location, new { @class = "form-control", Value = @Model.Location })
        </div>
    </div>
    // Birthday
    <div class="form-group">
        @Html.LabelFor(m => m.BirthDay, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.BirthDay, new { @class = "form-control", Value = Model.BirthDay })
        </div>
    </div>
    // JobTitle
    <div class="form-group">
        @Html.LabelFor(m => m.JobTitle, "Job Title", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.JobTitle, new { @class = "form-control", Value = @Model.JobTitle })
        </div>
    </div>
    // Description
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", Value = @Model.Description })
        </div>
    </div>
    // ImagePath
    <div class="form-group">
        @Html.LabelFor(m => m.ProfilePicture, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserProfilePicture, new { type = "file" })
            @Html.ValidationMessage("CustomMessage")
        </div>
    </div>
    // IsPrivateProfile
    <div class="form-group">
        @Html.LabelFor(m => m.IsPrivateProfile,"Make your profile private ?", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.IsPrivateProfile, new {  })
            @Html.ValidationMessage("CustomMessage")
        </div>
    </div>
    // SubmitButton
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Edit" />
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
